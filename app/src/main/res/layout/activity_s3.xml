<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:andriod="http://schemas.android.com/apk/res-auto"
    >

    <Button
        android:id="@+id/exit"
        android:layout_width="115dp"
        android:layout_height="50dp"
        android:text="exit"
        andriod:layout_editor_absoluteX="301dp"
        andriod:layout_editor_absoluteY="670dp"
        app:layout_constraint_toTopOf="parent"
        tools:layout_editor_absoluteX="304dp"
        tools:layout_editor_absoluteY="670dp"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/Addstore"
        android:layout_width="115dp"
        android:layout_height="50dp"
        android:text="Add Store"
        andriod:layout_editor_absoluteX="4dp"
        andriod:layout_editor_absoluteY="670dp"
        app:layout_constraint_toTopOf="parent"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="670dp"
        tools:ignore="MissingConstraints" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="0dp">

        <ListView
            android:id="@+id/simpleListView"
            android:layout_width="match_parent"
            android:layout_height="629dp"
            tools:context="abhiandroid.com.listexample.MainActivity">

        </ListView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>